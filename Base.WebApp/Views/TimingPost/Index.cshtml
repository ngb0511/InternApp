                <div class="modal-footer">
                    <button onclick="HideModal()" type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <button onclick="Update()" class="btn btn-primary" type="submit">Cập nhật</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modalImport" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Nhập file excel</h4>
                </div>
                    <div class="">
                        <div class="col-md-12" style="padding-bottom: 12px;padding-top: 12px; padding-left:15px">
                            <div class="col-md-4"><span>Chọn file:</span></div>
                            <div class="col-md-8">
                        <input name="postedFile" type="file" id="fileInput" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button onclick="HideModal()" type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button onclick="Import()" class="btn btn-primary">Import</button>
                    </div>
        </div>
    </div>
</div>

