@{
    ViewData["Title"] = "Index";
}
<head>
 <link href="~/css/timingpost.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <script src="~/js/timingpost.js"></script>
</head>
<h1>Timing Post</h1>

<p>
    <a onclick="CreateTiming()" class="btn btn-success" id="create">Create New</a>
    <a onclick="ImportTiming()" class="btn btn-success" id="create">Import Excel</a>
    <a onclick="Export()" class="btn btn-success" id="create">Export Excel</a>
</p>

<div class="form-group">
    <label for="pageSize">Page Size:</label>
    <select class="form-control" style="width:min-content" id="pageSize" onchange="changePageSize()">
        <option value="10">10</option>
        <option value="20" selected>20</option>
        <option value="50">50</option>
    </select>
</div>
<table class="table" id="people-table">
    <thead>
        <tr>
            <th></th>
            <th>Customer</th>
            <th>PostName</th>
            <th>PostStart</th>
            <th>PostEnd</th>
            <th>CreatedDate</th>
            <th>CreatedByName</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <!-- Dữ liệu sẽ được cập nhật tại đây -->
    </tbody>
</table>
<div id="data-container">
    <!-- Dữ liệu sẽ được cập nhật ở đây -->
</div>
<div id="footer" style="display:none">
    <div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="input-group">
                <input type="number" id="pageIndex" value="1" min="1" onchange="changePage()">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" onclick="prevPage()">Previous</button>
                    <button class="btn btn-outline-secondary" type="button" onclick="nextPage()">Next</button>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
