<!-- HTML của biểu tượng loading -->
<div id="loading-icon" style="display: none;">
    <!-- Đây có thể là một hình ảnh GIF hoặc biểu tượng từ thư viện font -->
    <i class="fa fa-spinner fa-spin"></i> Loading...
</div>

